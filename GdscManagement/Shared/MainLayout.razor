@using GdscRecruitment.Common.Shared
@inherits LayoutComponentBase

<PageTitle>GDSC Management</PageTitle>

<MudThemeProvider Theme="Theme.Get2()"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <AppBar ToggleDrawer="ToggleDrawer"></AppBar>

    <MudDrawer @onmouseenter="OpenDrawer" @onmouseleave="CloseDrawer" Anchor="Anchor.Start" ClipMode="DrawerClipMode.Always" @bind-Open="@_open" Elevation="1" Variant="@DrawerVariant.Mini">
        <NavMenu></NavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _open;

    private void OpenDrawer()
    {
        _open = true;
    }

    private void CloseDrawer()
    {
        _open = false;
    }

    private void ToggleDrawer()
    {
        _open = !_open;
    }

}
